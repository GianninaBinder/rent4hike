<div style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(255,255,255,0.2)),url(https://www.galeria-reisen.de/magazin/wp-content/uploads/2021/01/KanadaAdobeStock_295448049.jpeg);">
  <div class="container bg-white">
    <br>
    <h2 class="text-center fw-bold">Check our equipment</h2>
    <div class="d-flex align-items-center justify-content-between">
      <%= form_tag tools_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        placeholder: "Filter by category",
        class: "my-4"
        %>
        <%= submit_tag "Search", class: "btn btn-primary btn-sm mx-2" %>
      <% end %>
      <div>
        <% if policy(Tool).create? %>
          <%= link_to "Add equipment", new_tool_path, class: "btn-ghost link" %>
        <% end %>
      </div>
    </div>
    <div class="row g-4">
      <% @tools.each do |tool|%>
        <div class="col-lg-4 col-md-6 col-xs-8">
          <div class="card-trip">
            <% if tool.photos.any? %>
              <%= cl_image_tag tool.photos[0].key %>
            <%end%>

            <%= link_to tool_path(tool), class:"text-decoration-none link" do %>
              <div class="card-trip-infos">
                <div>
                  <h2><%=tool.name.capitalize %></h2>
                  <p><%= tool.description %></p>
                </div>
              <h2 class="card-trip-pricing">CHF <%= tool.price%></h2>
              </div>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>
    <br>
    <br>
  </div>
</div>
