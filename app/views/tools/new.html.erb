<div style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(255,255,255,0.2)),url(https://www.galeria-reisen.de/magazin/wp-content/uploads/2021/01/KanadaAdobeStock_295448049.jpeg);">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-3 p-4 bg-white rounded my-3">
        <h3 class="my-2"> Add new equipment</h3>
        <%= simple_form_for [ @tool ] do |f| %>
          <%= f.input :name %>
           <%= f.input :category, collection: ["Accessoires", "Backpacks", "Clothing", "Footwear", "Sleeping bags", "Tents"]%>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Add equipment", class: "btn btn-primary" %>
        <% end %>
        <div class="my-3">
          <%= link_to "Back to equipment", tools_path, class: "link" %>
        </div>
      </div>
    </div>
  </div>
</div>
