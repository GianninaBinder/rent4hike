
<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.association :user %>
    <%= f.association :tool %>
    <%= f.input :price_total %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
