<div style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(255,255,255,0.2)),url(https://www.galeria-reisen.de/magazin/wp-content/uploads/2021/01/KanadaAdobeStock_295448049.jpeg);">
  <div class="container">
    <div class="p-4 bg-white">
      <p id="notice"><%= notice %></p>
      <h1>My rental</h1>

      <p>
        <strong>Start date:</strong>
        <%= @booking.start_date %>
      </p>

      <p>
        <strong>End date:</strong>
        <%= @booking.end_date %>
      </p>

      <p>
        <strong>Equipment:</strong>
        <%= @booking.tool.name %>
      </p>

      <p>
        <strong>Total price:</strong>
        CHF<%= @booking.price_total %>
      </p>

      <%= link_to 'Edit', edit_booking_path(@booking), class:"btn btn-outline-dark" %>
      <%= link_to 'Back to my rentals', bookings_path, class:"btn btn-outline-dark" %>
    </div>
  </div>
</div>
